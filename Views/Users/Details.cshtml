@model Zoolirante_Open_Minded.Models.User
@{
    string name = Model?.FullName ?? "User";
    string initial = string.IsNullOrWhiteSpace(name)
        ? "?"
        : name.Trim()[0].ToString().ToUpperInvariant();
}



<style>



    .tile {
        display: flex;
        align-items: center;
        gap: .75rem;
        padding: 1rem 1.05rem;
        border-radius: 14px;
        background: #fff;
        border: 1px solid rgba(0,0,0,.06);
        transition: transform .12s ease, box-shadow .12s ease, border-color .12s ease;
        text-decoration: none !important;
        color: inherit;
    }

        .tile:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 26px rgba(0,0,0,.12);
            border-color: rgba(0,0,0,.12);
        }

        .tile .icon {
            width: 40px;
            height: 40px;
            border-radius: 12px;
            display: grid;
            place-items: center;
            background: #f1f3f5;
            font-size: 20px;
        }

    .copy-btn {
        border: 0;
        background: transparent;
        color: #0d6efd;
        font-size: .9rem;
        padding: 0 .25rem;
    }

        .copy-btn:hover {
            text-decoration: underline;
        }

    .divider-ghost {
        height: 8px;
    }
</style>

<div class="account-page">

    <!-- Header -->
    <div class="d-flex align-items-center gap-3 mb-3">
        <div class="avatar-badge" title="@name" aria-hidden="true">@initial</div>
        <h2 class="m-0 custom-large-title" style="color: #db7322">Welcome to Zoolirante, @name!</h2>
    </div>


    <div class="row g-4">
        <!-- Profile -->
        <div class="col-12 col-lg-6">
            <div class="card card-glass h-100">
                <div class="card-header custom-subtitle" style="color: #db7322">Profile</div>
                <div class="card-body">
                    <div class="d-flex flex-column gap-3">
                        <div>
                            <div class="label">Full Name</div>
                            <div class="value">@Model.FullName</div>
                        </div>
                        <div>
                            <div class="label">Email</div>
                            <div class="d-flex align-items-center flex-wrap gap-2">
                                <a href="mailto:@Model.Email" class="value">@Model.Email</a>
                                <span class="badge bg-success badge-chip" style="font-weight:400; font-size: 1rem">Verified</span>
                                <button type="button" class="copy-btn" onclick="copyEmail('@Model.Email')">Copy</button>
                                <small id="copyEmailMsg" class="text-success d-none">Copied!</small>
                            </div>
                        </div>
                        <div>
                            <div class="label">Role</div>
                            <span class="badge bg-secondary badge-chip value" style="font-weight:400; font-size: 1rem">@Model.Role</span>
                        </div>
                    </div>
                </div>
                <div class="card-footer bg-transparent">
                    <a asp-action="EditInfo" class="btn btn-outline-secondary">Edit profile</a>
                </div>
            </div>
        </div>

        <!-- Membership only view -->
        <div class="col-12 col-lg-6">
            <div class="card card-glass h-100">
                <div class="card-header custom-subtitle" style="color: #db7322">Membership</div>
                <div class="card-body">
                    <div class="mb-2">
                        <div class="label">Status</div>
                        <span class="badge bg-light text-dark badge-chip" style="font-weight:400; font-size: 1rem">Open to view your status</span>
                    </div>
                    <div class="small account-subtle">
                        See your tier, renewal date and benefits on the membership page.
                    </div>
                </div>
                <div class="card-footer bg-transparent">
                    <a asp-controller="Memberships" asp-action="Index" class="btn btn-soft btn-slim">View membership</a>
                </div>
            </div>
        </div>

        <!-- Payment methods -->
        <div class="col-12 col-lg-6">
            <div class="card card-glass h-100">
                <div class="card-header custom-subtitle" style="color: #db7322">Payment methods</div>
                <div class="card-body">
                    <div class="mb-2">
                        <div class="label">Default</div>
                        <div class="value">@Model.PaymentMethod</div>
                    </div>
                    <div class="small account-subtle">Only card brand is shown here for your security.</div>
                </div>
                <div class="card-footer bg-transparent">
                    <a asp-action="EditPayment" class="btn btn-soft btn-slim">Change payment method</a>
                </div>
            </div>
        </div>

        <!-- Security -->
        <div class="col-12 col-lg-6">
            <div class="card card-glass h-100">
                <div class="card-header custom-subtitle" style="color: #db7322">Security</div>
                <div class="card-body">
                    <div class="small account-subtle mb-2">Reset your password or sign out across devices.</div>
                    <div class="d-flex gap-2 flex-wrap">
                        <!-- Same target as "Forgot password?" -->
                        <a asp-controller="Users" asp-action="Reset" class="btn btn-outline-danger btn-slim">Reset password</a>
                        <a asp-controller="Users" asp-action="Logout" class="btn btn-outline-secondary btn-slim">Log out</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- breathing space -->
    <div class="divider-ghost"></div>

    <!-- Quick actions (unchanged routes) -->
    <div class="mt-2">
        <div class="row g-3">
            <div class="col-12 col-sm-6 col-lg-3">
                <a class="tile" asp-controller="AnimalFavourite" asp-action="UserFavorites" title="See or manage favourites">
                    <div class="icon">🐾</div>
                    <div>
                        <div class="fw-semibold">My favourite animals</div>
                        <div class="small account-subtle">See or manage favourites</div>
                    </div>
                </a>
            </div>
            <div class="col-12 col-sm-6 col-lg-3">
                <a class="tile" asp-controller="Events" asp-action="Index" title="Browse upcoming sessions">
                    <div class="icon">🎟️</div>
                    <div>
                        <div class="fw-semibold">Events & tickets</div>
                        <div class="small account-subtle">Browse upcoming sessions</div>
                    </div>
                </a>
            </div>
            <div class="col-12 col-sm-6 col-lg-3">
                <a class="tile" asp-controller="Merchandises" asp-action="Index" title="Shop merchandise">
                    <div class="icon">🛍️</div>
                    <div>
                        <div class="fw-semibold">Merchandise</div>
                        <div class="small account-subtle">Shop & pick-up in store</div>
                    </div>
                </a>
            </div>
            <div class="col-12 col-sm-6 col-lg-3">
                <a class="tile" asp-action="EditPayment" title="Update saved card">
                    <div class="icon">💳</div>
                    <div>
                        <div class="fw-semibold">Payments</div>
                        <div class="small account-subtle">Update saved card</div>
                    </div>
                </a>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="link-secondary">Back to list</a>
    </div>
</div>

<script>
    function copyEmail(email) {
      navigator.clipboard.writeText(email).then(function () {
        const el = document.getElementById('copyEmailMsg');
        el.classList.remove('d-none');
        setTimeout(() => el.classList.add('d-none'), 1200);
      });
    }
</script>
