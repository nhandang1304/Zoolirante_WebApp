@model Zoolirante_Open_Minded.Models.EntranceTicket
@{
    ViewData["Title"] = "Ticket Confirmation";
    var fullName = Model?.User?.FullName ?? "Customer";
    var email = Model?.User?.Email ?? "";
    // Optional fields—use if your model has them
    var qrBase64 = (Model as dynamic)?.QrCodeImageBase64 as string;
    var qrPath = (Model as dynamic)?.QrCodePath as string;
    var token = (Model as dynamic)?.ConfirmationToken as string;
}

<div class="container my-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="alert alert-success d-flex align-items-center" role="alert">
                <i class="bi bi-check-circle me-2" aria-hidden="true"></i>
                <div>
                    <strong>Payment successful.</strong> Your ticket has been issued.
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-7">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="h4 mb-3">Ticket Confirmation</h2>
                    <p class="mb-1">Hi <strong>@fullName</strong>,</p>
                    <p class="text-muted">
                        A confirmation email has been sent to
                        <strong>@email</strong>.
                    </p>
                    <hr />

                    <h4 class="h6 text-uppercase text-muted mb-3">Ticket Details</h4>
                    <div class="row">
                        <div class="col-6">
                            <ul class="list-unstyled small mb-0">
                                <li class="mb-2"><span class="text-muted">Ticket ID:</span><br /><strong>@Model.TicketId</strong></li>
                                <li class="mb-2"><span class="text-muted">Type:</span><br /><strong>@Model.Type</strong></li>
                                <li class="mb-2"><span class="text-muted">Price:</span><br /><strong>$@Model.Price</strong></li>
                            </ul>
                        </div>
                        <div class="col-6">
                            <ul class="list-unstyled small mb-0">
                                <li class="mb-2"><span class="text-muted">Issued Date:</span><br /><strong>@Model.CreatedAt.ToString("dd MMM yyyy")</strong></li>
                                <li class="mb-2"><span class="text-muted">Expiry Date:</span><br /><strong>@Model.ExpiredAt.ToString("dd MMM yyyy")</strong></li>
                            </ul>
                        </div>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(token))
                    {
                        <div class="mt-3 small text-muted">
                            Token: <code>@token</code>
                        </div>
                    }

                    <div class="d-flex flex-wrap gap-2 mt-4">
                        <a asp-action="Buy" class="btn btn-primary">Buy Another Ticket</a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">Go to Home</a>
                        <button type="button" class="btn btn-outline-dark" onclick="window.print()">Print</button>
                    
                    </div>
                </div>
            </div>
        </div>

        <div class="col-12 col-lg-5">
            <div class="card shadow-sm h-100">
                <div class="card-body d-flex flex-column align-items-center justify-content-center text-center">
                    <h3 class="h6 text-uppercase text-muted mb-3">Your QR Code</h3>

                    @if (!string.IsNullOrWhiteSpace(qrBase64))
                    {
                        <img src="data:image/png;base64,@qrBase64"
                             alt="Ticket QR Code"
                             class="img-fluid border rounded p-2"
                             style="max-width: 280px;" />
                        <a href="data:image/png;base64,@qrBase64"
                           download="ZooliranteTicket-@Model.TicketId-QR.png"
                           class="btn btn-outline-secondary btn-sm mt-3">
                            Download QR
                        </a>
                    }
                    else if (!string.IsNullOrWhiteSpace(qrPath))
                    {
                        <img src="@Url.Content(qrPath)"
                             alt="Ticket QR Code"
                             class="img-fluid border rounded p-2"
                             style="max-width: 280px;" />
                        <a href="@Url.Content(qrPath)"
                           download="ZooliranteTicket-@Model.TicketId-QR.png"
                           class="btn btn-outline-secondary btn-sm mt-3">
                            Download QR
                        </a>
                    }
                    else
                    {
                        <div class="border rounded p-4 w-100" style="max-width: 320px;">
                            <div class="text-muted small">
                                QR not available yet.<br />
                                Please refresh this page or check your confirmation email.
                            </div>
                        </div>
                    }

                    <p class="small text-muted mt-3 mb-0">
                        Please present this QR at the zoo entrance for fast check-in.
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
}
