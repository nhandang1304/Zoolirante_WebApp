@model Zoolirante_Open_Minded.Models.Merchandise
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Details";
    var role = HttpContextAccessor.HttpContext?.Session.GetString("Role") ?? "Customer";
}

<style>
    :root {
        --amber: #f0ad4e;
        --amber-300: #f6c26b;
        --panel: #fff;
    }

    .detail-wrap {
        background: #f7efd9;
        padding: 16px;
        border-radius: 14px;
    }

    .detail-card {
        background: var(--panel);
        border: 2px solid var(--amber-300);
        border-radius: 16px;
        padding: 18px;
        box-shadow: 0 10px 24px rgba(0,0,0,.08);
    }

    .img-fit {
        max-width: 100%;
        border-radius: 12px;
        border: 1px solid #eee;
    }

    .badge-stock {
        border-radius: 10px;
        padding: .35rem .6rem;
    }

    .form-qty input {
        width: 90px;
        height: 46px;
        border-radius: 10px;
    }

    .btn-amber {
        background: var(--amber);
        border: none;
        height: 46px;
        border-radius: 10px;
        font-weight: 600;
    }

        .btn-amber:hover {
            filter: brightness(.95);
        }

    .cap-box {
        border: 2px solid var(--amber-300);
        border-radius: 12px;
        padding: 12px 14px;
        background: #fff;
    }

    .cap-title {
        font-weight: 700;
        margin-bottom: .35rem;
    }

    .cap-grid .label {
        color: #111;
        font-weight: 600;
    }

    .cap-grid .value {
        font-weight: 600;
    }
</style>

<div class="container mt-3">
    <h1 class="mb-2">Details</h1>
    <h4 class="mb-3">Merchandise</h4>

    <div class="detail-wrap">
        <div class="detail-card">
            <div class="row g-4">
                <div class="col-md-5">
                    @if (!string.IsNullOrWhiteSpace(Model.ImageUrl))
                    {
                        <img class="img-fit" src="@Model.ImageUrl" alt="@Model.Name"
                             onerror="this.style.display='none'" />
                    }
                </div>

                <div class="col-md-7">
                    <dl class="row">
                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9">@Model.Name</dd>

                        <dt class="col-sm-3">Description</dt>
                        <dd class="col-sm-9">@Model.Description</dd>

                        <dt class="col-sm-3">Price</dt>
                        <dd class="col-sm-9">$@Model.Price</dd>

                        <dt class="col-sm-3">Stock</dt>
                        <dd class="col-sm-9">
                            <span class="badge bg-@(Model.Stock > 0 ? "success" : "danger") badge-stock">
                                @(Model.Stock > 0 ? "In stock" : "Out of stock")
                            </span> (@Model.Stock)
                        </dd>

                        <dt class="col-sm-3">Category</dt>
                        <dd class="col-sm-9">@Model.Category</dd>
                    </dl>

            
                    <form asp-action="AddToCart" method="post" class="d-flex gap-2 align-items-center mt-2">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@Model.ProductId" />
                        <div class="form-qty d-flex align-items-center gap-2">
                            <label class="me-1">Qty</label>
                            <input type="number" name="qty" min="1" value="1" class="form-control" />
                        </div>
                        <button type="submit" class="btn btn-amber">Add to cart</button>
                    </form>

                    <div class="mt-3">
                        <a class="btn btn-outline-secondary" asp-controller="Cart" asp-action="Index">View Cart</a>
                    </div>

                    <div class="mt-3">
                        <a asp-action="Edit" asp-route-id="@Model.ProductId">Edit</a> |
                        <a asp-action="Index">Back to List</a>
                    </div>

               
                    @if (role == "Manager" || role == "Admin")
                    {
                        <hr class="my-4" />
                        <div class="cap-box">
                            <div class="cap-title">Shelf Capacity</div>
                            <div class="row cap-grid">
                                <div class="col-6 col-md-4">
                                    <div class="label">Max capacity</div>
                                    <div class="value">@Model.ShelfCapacity</div>
                                </div>
                                <div class="col-6 col-md-4">
                                    <div class="label">Current on shelf</div>
                                    <div class="value">@Model.CurrentShelf</div>
                                </div>
                            </div>
                            <div class="text-muted small mt-2">
                                “Current on shelf” decreases at checkout; it cannot go below 0.
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
