@model Zoolirante_Open_Minded.ViewModels.CartVM
@using Microsoft.AspNetCore.Mvc.Rendering
@inject IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Checkout";
    var userId = HttpContextAccessor.HttpContext.Session.GetInt32("UserId");
    var options = ViewBag.PickupOptions as IEnumerable<SelectListItem> ?? Enumerable.Empty<SelectListItem>();
}

<h2>Checkout</h2>

@if (TempData["CartMessage"] is string msg)
{
    <div class="alert alert-success">@msg</div>
}


<form asp-controller="Cart" asp-action="Create" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" name="UserId" value="@userId" />

    <div class="card mb-3">
        <div class="card-body">
            <h5 class="card-title">Pickup Information</h5>

            <div class="mb-3">
                <label for="pickupSelect" class="form-label">Pickup Location</label>
                <select id="pickupSelect" name="PickupLocationId" class="form-select" required>
                    <option value="">Select a location</option>
                    @foreach (var opt in options)
                    {
                        var selected = (Model.PickupLocationId?.ToString() == opt.Value) ? "selected" : null;
                        <option value="@opt.Value" selected="@selected">@opt.Text</option>
                    }
                </select>
            </div>

            <div class="mb-3">
                <label class="form-label">Pickup Date</label>
                <input class="form-control" name="PickupDate" type="datetime-local" required />
            </div>

            @if (!string.IsNullOrEmpty(Model.PickupLocationName))
            {
                <div class="mt-2 text-success">
                    Selected: <strong>@Model.PickupLocationName</strong>
                </div>
            }
        </div>
    </div>


    <h5>Order Summary</h5>
    <table class="table table-sm">
        <thead>
            <tr><th>Item</th><th class="text-end">Price</th><th class="text-center">Qty</th><th class="text-end">Total</th></tr>
        </thead>
        <tbody>
            @foreach (var it in Model.Items)
            {
                <tr>
                    <td>@it.Name</td>
                    <td class="text-end">@it.Price.ToString("C")</td>
                    <td class="text-center">@it.Qty</td>
                    <td class="text-end">@it.LineTotal.ToString("C")</td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <th colspan="3" class="text-end">Subtotal</th>
                <th class="text-end">@Model.Subtotal.ToString("C")</th>
            </tr>
        </tfoot>
    </table>

    <div class="d-flex gap-2">
        <a class="btn btn-outline-secondary" asp-action="Index">Back to Cart</a>

        @if (Context.Session.GetInt32("UserId") != null)
        {
            <button class="btn btn-success" type="submit">Place Order</button>
        }
        else
        {
            <button type="button" class="btn btn-success" disabled>Please login to purchase</button>
        }
    </div>
</form>
